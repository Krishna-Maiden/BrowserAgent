@page "/dashboard"
@inject AgentCore.Services.AgentService AgentService

<h3>AI Browser Agent</h3>
<textarea @bind="UserTask" rows="6" cols="80"></textarea>
<br/>
<button @onclick="RunTask">Run</button>

<p>@Status</p>

@code {
    private string? UserTask;
    private string Status = "";

    private async Task RunTask()
    {
        Status = "Processing...";
        if (!string.IsNullOrWhiteSpace(UserTask))
        {
            await AgentService.RunUserTask(UserTask);
        }
        Status = "Done.";
    }
}